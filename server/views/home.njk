{% extends 'layout.njk' %}

{% from "breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "#"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>

      <p class="govuk-body">gov.uk republishing demonstration</p>

      <ul class="govuk-list govuk-list--bullet">
        <li><a href="/govuk/government/news/north-warwickshire-landowners-warned-to-be-vigilant">News Article</a> (<a href="https://www.gov.uk/government/news/north-warwickshire-landowners-warned-to-be-vigilant">govuk</a>)</li>
        <li><a href="/govuk/maternity-pay-leave">Guide</a> (<a href="https://www.gov.uk/maternity-pay-leave">govuk</a>)</li>
        <li><a href="/govuk/countryside-stewardship-grants/concrete-yard-renewal-rp15">Manual (Countryside Stewardship)</a> (<a href="https://www.gov.uk/countryside-stewardship-grants/concrete-yard-renewal-rp15">govuk</a>)</li>
      </ul>

    </div>

    <div class="govuk-grid-column-one-third">

      <!-- The Related items component is not part of GOV.UK Frontend but will be styled if used in the Prototype Kit -->

      <aside class="app-related-items" role="complementary">
        <h2 class="govuk-heading-m" id="subsection-title">
          Interesting Links
        </h2>
        <nav role="navigation" aria-labelledby="subsection-title">
          <ul class="govuk-list govuk-!-font-size-16">
            <li>
              <a class="govuk-link" href="#">
                Knowledgebase
              </a>
            </li>
            <li>
              <a class="govuk-link" href="#">
                RPA
              </a>
            </li>
            <li>
              <a href="#" class="govuk-link govuk-!-font-weight-bold">
                More <span class="govuk-visually-hidden">in Subsection</span>
              </a>
            </li>
          </ul>
        </nav>
      </aside>

    </div>
  </div>
{% endblock %}
